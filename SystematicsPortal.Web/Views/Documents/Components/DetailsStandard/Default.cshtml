@model SystematicsPortal.Web.Views.Documents.Components.DetailsStandard.DetailsStandardViewModel

@foreach (var field in Model.Fields)
{
    <div class="form-group row">
        <label class="col-sm-4 col-lg-3">@field.Label</label>
        <div class="col-sm-8 col-lg-9">@await Component.InvokeAsync(field.ViewComponent, field.FieldData)</div>
    </div>
}
